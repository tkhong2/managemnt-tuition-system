@model IEnumerable<TuitionSys.Application.DTOs.CourseDto>

@{
    ViewData["Title"] = "Danh sách học phần";
}
<style>
    table th {
        text-transform: none !important;
    }

    .action-bar {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 24px;
        flex-wrap: wrap;
    }

        .action-bar > * {
            margin-bottom: 0 !important;
            height: 48px;
            display: flex;
            align-items: center;
        }

        .action-bar select {
            min-width: 220px;
            padding: 10px;
            border-radius: 10px;
            height: 38px;
        }

        .action-bar form {
            margin-bottom: 0 !important;
        }
</style>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<section class="section">
    <h1>Danh sách học phần</h1>
    <div style="display:flex;margin-bottom:20px">
        <form asp-controller="CourseStudent" asp-action="Sort" method="get" class="d-flex align-items-center" style="gap: 10px;">
            <select style="padding:10px;" name="sortOption" required>
                <option value="">Sắp xếp giá tiền còn thiếu:</option>
                <option value="asc">Giá từ: Bé đến lớn</option>
                <option value="desc">Giá từ: Lớn đến bé</option>
                <option value="gte1m">Giá tiền từ: 1.000.000đ</option>
                <option value="gte5m">Giá tiền từ: 5.000.000đ</option>
            </select>
            <button class="btn btn-primary" type="submit">Lọc</button>
        </form>
        <form  asp-controller="CourseStudent" asp-action="Sort2" method="get" class="d-flex align-items-center" style="gap: 10px;">
            <select style="padding:10px;margin-left:50px" name="sortOption" required>
                <option value="">Chọn học kì:</option>
                <option value="hk1">Học kì 1</option>
                <option value="hk2">Học kì 2</option>
            </select>
            <button class="btn btn-primary" type="submit">Lọc</button>
        </form>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="align-middle">
            <tr>
                <th>Mã học phần</th>
                <th>Tên học phần</th>
                <th>Số tín chỉ</th>
                <th>Học kỳ</th>
                <th>Ngày bắt đầu</th>
                <th>Ngày kết thúc</th>
                <th>Học phí</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CourseId</td>
                    <td>@item.CourseName</td>
                    <td>@item.Credits</td>
                    <td>@item.Semester</td>
                    <td>@(item.StartDate?.ToString("dd/MM/yyyy"))</td>
                    <td>@(item.EndDate?.ToString("dd/MM/yyyy"))</td>
                    <td>@(item.Price?.ToString("N0") ?? "0")</td>
                    <td>
                        <div class="action-buttons d-flex gap-2">
                            <form  asp-controller="CourseStudent" asp-action="RegisterCourse" method="post" onsubmit="return confirm('Bạn chắc chắn đăng kí học phần này chứ?');">
                                <input type="hidden" name="courseId" value="@item.CourseId" />
                                <button type="submit" class="btn btn-primary btn-sm">Đăng ký</button>
                            </form>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>
